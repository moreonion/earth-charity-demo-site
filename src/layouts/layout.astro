---
import Nav from "@/components/nav.astro";
import GlobalStyles from "@/Styles/globalStyles.astro";
import FoundistDemoStyles from "@/Styles/FoundistDemoStyles.astro";
import { Image } from "astro:assets";
import LogoImage from "@/Images/earth-charity_logo_alt.png";

interface Props {
    title?: string;
}

const { title = "Earth Charity" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />

        <title>{title}</title>

        <FoundistDemoStyles />
        <GlobalStyles />
    </head>
    <body>
        <header>
            <div data-inert-with-nav>
                <a href="/">
                    <Image
                       src={LogoImage}
                       alt="Earth Charity Logo"
                       loading="eager"
                    />
                    <span class="sr-only">Earth Charity</span>
                </a>
            </div>
            <Nav />
        </header>
        <div data-inert-with-nav>
            <main>
                <slot />
            </main>
            <!-- <footer></footer> -->
        </div>
    </body>
</html>

<style>
    body {
        padding: 2rem;
        @media (min-width: 640px) {
            max-width: 80ch;
            margin: 0 auto;
        }
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;

        @media (min-width: 640px) {
            flex-direction: column;
        }
    }

    main {
        padding: 2rem 0;
    }
</style>
