---
import { ViewTransitions } from "astro:transitions";

import Logo from "@/Components/logo.astro";
import Nav from "@/Components/nav.astro";
import GlobalStyles from "@/Styles/globalStyles.astro";
import FoundistDemoStyles from "@/Styles/FoundistDemoStyles.astro";

interface Props {
    title?: string;
}

const { title = "Earth Charity" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />

        <title>{title}</title>

        <ViewTransitions />

        <FoundistDemoStyles />
        <GlobalStyles />
    </head>
    <body>
        <header>
            <a href="/">
                <Logo />
                <span class="sr-only">Earth Charity</span>
            </a>
            <Nav />
        </header>
        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    body {
        padding: 2rem;
        @media (min-width: 640px) {
            max-width: 80ch;
            margin: 0 auto;
        }
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;

        @media (min-width: 640px) {
            flex-direction: column;
        }
    }
</style>
