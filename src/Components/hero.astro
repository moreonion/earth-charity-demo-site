---
import EarthImage from "../Images/elena-mozhvilo-eA32JIBsSu8-unsplash.jpg";
---

<section>
    <h1><slot name="title">Earth Charity</slot></h1>
    <p class="lead">
        <slot name="description"
            >We are <span title="This is just a demo site made by Impact Stack."
                >(not)</span
            > a charity that helps the environment.</slot
        >
    </p>
</section>

<style define:vars={{ backgroundImage: `url(${EarthImage.src})` }}>
    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
        background-image: var(--backgroundImage);
        background-size: cover;
        background-position: center;

        & > h1 {
            color: white;
            background-color: #90c92a;
            padding: 0.5rem;
            margin-top: 1rem;
            text-align: center;
        }

        & > p {
            color: white;
            background-color: #90c92a;
            padding: 0.5rem;
            font-weight: 700;
        }
    }
</style>
