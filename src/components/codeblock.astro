---
import { Code } from "astro-expressive-code/components";

const { code, lang = "html", text = "See the code", codeTitle } = Astro.props;
---

<details>
    <summary>{text}</summary>
    <Code {code} {lang} title={codeTitle} wrap />
</details>

<style>
    summary {
        cursor: pointer;
        user-select: none;
        font-weight: 700;

        &:hover {
            text-decoration: underline;
        }
    }
</style>
